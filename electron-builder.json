{
  "appId": "com.drawnix.app",
  "productName": "Drawnix",
  "directories": {
    "output": "dist/electron"
  },
  "files": [
    "dist/apps/web/**/*",
    "electron-main.js",
    "electron-preload.js",
    "package.json"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Drawnix",
    "artifactName": "Drawnix-${os}-${arch}-Setup.${ext}"
  },
  "portable": {
    "artifactName": "Drawnix-${os}-${arch}-Portable.${ext}"
  },
  "mac": {
    "artifactName": "Drawnix-${os}-${arch}.${ext}",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "category": "public.app-category.graphics-design",
    "icon": "build/icon.png"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
    "target": [
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "category": "Graphics",
    "icon": "build/icons",
    "executableName": "drawnix",
    "desktop": {
      "entry": {
        "Name": "Drawnix",
        "Comment": "A drawing and diagramming tool",
        "GenericName": "Drawing Application",
        "Type": "Application",
        "Terminal": "false",
        "StartupNotify": "true",
        "Categories": "Graphics;VectorGraphics;",
        "MimeType": "application/x-drawnix;"
      }
    }
  },
  "deb": {
    "packageName": "Drawnix",
    "artifactName": "Drawnix-${os}-${arch}.${ext}"
  },
  "appImage": {
    "artifactName": "Drawnix-${os}-${arch}.${ext}",
    "synopsis": "A drawing and diagramming tool",
    "category": "Graphics"
  },
  "publish": null
}
